{
	"name": "vinehelper",
	"version": "2.4.11",
	"description": "Improve the Amazon Vine experience.",
	"type": "module",
	"scripts": {
		"lint": "eslint .",
		"prepare": "husky",
		"build": "tsc && vite build",
		"dev": "vite build --watch --mode development",
		"preview": "vite preview"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/FMaz008/VineHelper.git"
	},
	"keywords": [
		"amazon",
		"vine",
		"helper"
	],
	"author": "VineHelper <https://vinehelper.ovh/>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/FMaz008/VineHelper/issues"
	},
	"homepage": "https://github.com/FMaz008/VineHelper#readme",
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"@types/webextension-polyfill": "^0.10.7",
		"bootstrap": "5",
		"bootstrap-icons": "1",
		"collections": "^5.1.13",
		"jquery": "^3.7.1",
		"socket.io": "^4.7.5",
		"socket.io-client": "^4.7.5",
		"tslog": "^4.9.2",
		"vine-styling": "github:Thorvarium/vine-styling.git#main"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@crxjs/vite-plugin": "^2.0.0-beta.23",
		"@release-it/bumper": "^6.0.1",
		"@types/bootstrap": "^5.2.10",
		"@types/collections": "^5.1.5",
		"@types/node": "^20.12.2",
		"archiver": "^7.0.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"release-it": "^17.1.1",
		"typescript": "^5.2.2",
		"vite": "^5.2.7",
		"vite-plugin-web-extension": "^4.1.3",
		"webextension-polyfill": "^0.10.0"
	},
	"lint-staged": {
		"*.{js}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{md, html, css}": "prettier --write"
	},
	"release-it": {
		"git": {
			"requireCleanWorkingDir": false
		},
		"github": {
			"release": true,
			"assets": [
				"VH-*.zip"
			]
		},
		"hooks": {
			"after:bump": [
				"yarn build"
			]
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/bumper": {
				"out": "manifest.json"
			}
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
